{
  "apidoc": {
    "version": "0.11.26"
  },
  "name": "football-data",
  "base_url": "http://api.football-data.org/v1",
  "description": "",
  "models": {
    "competition": {
      "fields": [
        {
          "name": "id",
          "type": "long",
          "description": "ID of the competition"
        },
        {
          "name": "caption",
          "type": "string",
          "description": "Competition long name"
        },
        {
          "name": "league",
          "type": "league",
          "description": "The league the competition belongs to"
        },
        {
          "name": "year",
          "type": "string",
          "description": "year of the competition"
        },
        {
          "name": "currentMatchday",
          "type": "integer",
          "description": "current day of the competition"
        },
        {
          "name": "numberOfTeams",
          "type": "integer",
          "description": "Number of teams in the competition"
        },
        {
          "name": "numberOfGames",
          "type": "integer",
          "description": "Number of matches in the competition"
        },
        {
          "name": "lastUpdated",
          "type": "date-time-iso8601",
          "description": "Timestamp of the last update"
        }
      ]
    },
    "fixture": {
      "fields": [
        {
          "name": "date",
          "type": "date-time-iso8601",
          "description": "Event date and time"
        },
        {
          "name": "status",
          "type": "fixtureStatus",
          "description": "Status of the Event"
        },
        {
          "name": "matchday",
          "type": "integer",
          "description": "day of the fixture in the competition"
        },
        {
          "name": "homeTeamName",
          "type": "string"
        },
        {
          "name": "awayTeamName",
          "type": "string"
        },
        {
          "name": "result",
          "type": "result"
        }
      ]
    },
    "fixtures": {
      "fields": [
        {
          "name": "fixtures",
          "type": "[fixture]"
        }
      ]
    },
    "score": {
      "fields": [
        {
          "name": "goalsHomeTeam",
          "type": "integer"
        },
        {
          "name": "goalsAwayTeam",
          "type": "integer"
        }
      ]
    },
    "result": {
      "fields": [
        {
          "name": "goalsHomeTeam",
          "type": "integer",
          "required": false
        },
        {
          "name": "goalsAwayTeam",
          "type": "integer",
          "required": false
        },
        {
          "name": "halfTime",
          "type": "score",
          "required": false
        },
        {
          "name": "extraTime",
          "type": "score",
          "required": false
        },
        {
          "name": "penaltyShootout",
          "type": "score",
          "required": false
        }
      ]
    }
  },
  "enums": {
    "league": {
      "name": "league",
      "description": "Supported leagues",
      "values": [
        {
          "name": "BL1",
          "description": "1. Bundesliga"
        },
        {
          "name": "BL2",
          "description": "2. Bundesliga"
        },
        {
          "name": "BL3",
          "description": "3. Bundesliga"
        },
        {
          "name": "DFB",
          "description": "Dfb-Cup"
        },
        {
          "name": "PL",
          "description": "Premiere League"
        },
        {
          "name": "EL1",
          "description": "League One"
        },
        {
          "name": "ELC",
          "description": "Championship"
        },
        {
          "name": "FAC",
          "description": "FA-Cup"
        },
        {
          "name": "SA",
          "description": "Serie A"
        },
        {
          "name": "SB",
          "description": "Serie B"
        },
        {
          "name": "PD",
          "description": "Primera Division"
        },
        {
          "name": "SD",
          "description": "Segunda Division"
        },
        {
          "name": "CDR",
          "description": "Copa del Rey"
        },
        {
          "name": "FL1",
          "description": "Ligue 1"
        },
        {
          "name": "FL2",
          "description": "Ligue 2"
        },
        {
          "name": "DED",
          "description": "Eredivisie"
        },
        {
          "name": "PPL",
          "description": "Primeira Liga"
        },
        {
          "name": "GSL",
          "description": "Super League"
        },
        {
          "name": "CL",
          "description": "Champions-League"
        },
        {
          "name": "EL",
          "description": "UEFA-Cup"
        },
        {
          "name": "EC",
          "description": "European-Cup of Nations"
        },
        {
          "name": "WC",
          "description": "World-Cup"
        }
      ]
    },
    "fixtureStatus": {
      "name": "fixtureStatus",
      "description": "status of the fixture",
      "values": [
        {
          "name": "SCHEDULED"
        },
        {
          "name": "TIMED"
        },
        {
          "name": "POSTPONED"
        },
        {
          "name": "CANCELED"
        },
        {
          "name": "IN_PLAY"
        },
        {
          "name": "FINISHED"
        }
      ]
    }
  },
  "resources": {
    "competition": {
      "path": "/competitions",
      "operations": [
        {
          "method": "GET",
          "responses": {
            "200": {
              "type": "[competition]"
            }
          }
        }
      ]
    },
    "fixture": {
      "path": "/competitions",
      "operations": [
        {
          "method": "GET",
          "path": "/:competition_id/fixtures",
          "parameters": [
            {
              "name": "competition_id",
              "type": "long",
              "required": true
            }
          ],
          "responses": {
            "200": {
              "type": "fixtures"
            }
          }
        }
      ]
    }
  }
}
